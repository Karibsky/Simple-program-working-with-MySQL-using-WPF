        xmlns:local="clr-namespace:WPFDB"
        mc:Ignorable="d"
        Title="AddStudent" Height="190" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">
