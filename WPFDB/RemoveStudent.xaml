        <Label x:Name="label" Content="ID" HorizontalAlignment="Center" Margin="15,40,0,0" VerticalAlignment="Top" Width="335" FontFamily="Century Gothic"/>
        <TextBox x:Name="parametr" HorizontalAlignment="Left" Height="23" Margin="15,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" FontFamily="Century Gothic"/>
